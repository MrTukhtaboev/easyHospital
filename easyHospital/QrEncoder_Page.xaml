<Page x:Class="easyHospital.BarcodeEncoderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:easyHospital"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BarcodeEncoderPage">

    <Viewbox>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Encode" Margin="0 10 0 5"/>
            <TextBox x:Name="EncodeTxt" Padding="5" Width="200"/>
            <TextBlock Text="Decode" Margin="0 10 0 5"/>
            <TextBox x:Name="DecodeTxt" Padding="5" Width="200"/>
            <Button x:Name="EncodeBtn" Click="EncodeBtn_Click" Content="encode" Padding="5" Margin="0 10 0 0"/>
            <Button x:Name="DecodeBtn" Click="DecodeBtn_Click" Content="decode" Padding="5" Margin="0 10 0 0"/>
            <Image x:Name="BarcodeValueImg" Margin="0 10 0 20" Height="100"/>
        </StackPanel>
    </Viewbox>
</Page>
